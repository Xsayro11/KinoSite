<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @RenderSection("Styles", required: false)
    @RenderSection("Scripts", required: false)
</head>
<body>
    <div id="wrapper">
        <div id="header">
            <div class="head_menu">
                <div class="content">
                    <div class="logo">

                    </div>
                    <a class="menu_btn">
                        <i class="icon-default"></i>
                        <i class="icon-hover"></i>
                        <span>Меню</span>
                    </a>
                    <div class="profile">

                    </div>
                </div>
            </div>
            @RenderSection("Slaider", required: false)
            @RenderSection("Player", required: false)
        </div>
        <div id="middle">
            @RenderBody()
        </div>

        <div id="footer" style="overflow: hidden;">
            <div style="height:1px; background-color: gray;"></div>
            <div class="footer_content">
                <ul class="foot_menu">
                    <li><a>ГЛАВНАЯ</a></li>
                    <li><a>НОВИНКИ</a></li>
                    <li><a>ФИЛЬМЫ</a></li>
                    <li><a>МУЛЬТФИЛЬМЫ</a></li>
                    <li><a>СЕРИАЛЫ</a></li>
                    <li><a>ТОП</a></li>
                    <li><a>КОНТАКТЫ</a></li>
                </ul>
            </div>
            <div style="text-align: center;"><p>Copyright 2016 Владыка Сергей Corp</p></div>
        </div>

    </div>

    <script>
        $('.head_menu ul li').hover(function () {
            $(this).children('.dropdown_menu').show();
        }, function () {
            $(this).children('.dropdown_menu').hide();
        });

        $('.dropdown_menu').hover(function () {
            $(this).parent('.head_menu ul li').children('a').addClass('hover');
        }, function () {
            $(this).parent('.head_menu ul li').children('a').removeClass('hover');
        });

        $('.post_image').hover(function () {
            if ($(this).hasClass('1')) {
                $(this).parents('.post').children('.popup-wrapper').css('left', '240px');
            }
            else if ($(this).hasClass('2')) {
                $(this).parents('.post').children('.popup-wrapper').css('left', '440px');
            }
            else if ($(this).hasClass('3')) {
                $(this).parents('.post').children('.popup-wrapper').css('left', '640px');
            }
            else if ($(this).hasClass('4')) {
                $(this).parents('.post').children('.popup-wrapper').css('left', '280px');
            }
            else {
                $(this).parents('.post').children('.popup-wrapper').css('left', '480px');
            }

            $(this).parents('.post').children('.popup-wrapper').show();
        }, function () {
            $(this).parents('.post').children('.popup-wrapper').hide();
        });

        $('.popup-wrapper').hover(function () {
            $(this).show();
        }, function () {
            $(this).hide();
        });


    </script>
</body>
</html>